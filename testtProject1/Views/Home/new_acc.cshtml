                </a>
                <a href="">
                    <!-- Instagram -->
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="">
                    <!-- Linkedin -->
                    <i class="fab fa-linkedin-in"></i>
                </a>
            </div>
            <div class="col-md-12 footer__copyright" style="border-top: 1px solid #222222;">
                <p style="margin: 0px;">© Copyright IMDB. All Rights Reserved </p>
            </div>
        </div>
    </footer>
