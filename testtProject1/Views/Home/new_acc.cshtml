                <div class="input-group me-3 nav_search">
                    <input type="text" class="form-control" placeholder="search" aria-label="search" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon2">Search</button>
                </div>
                <form class="d-flex">
                    <button class="btn btn-outline-primary me-2" type="button" id="button-addon2"><a href="@Url.Action("logIn","Home")" style="text-decoration: none;">Sign In</a></button>
                    <select class="form-select form-select-sm me-2 bg-dark text-secondary nav_lg" aria-label=".form-select-sm example">
                        <option selected>en</option>
                        <option value="1">Arabic</option>
                    </select>
                </form>
            </div>
        </div>
    </nav>
    <main>
        <div class="col-md-12">
            <div class="create-acc" style="justify-content: center; display: flex; background-color: white;">
                <form asp-action="new_acc" method="post" style="border: 1px solid #0d6efd;padding: 5%;margin: 5% 0px 5% 0px;border-radius: 5%;">
                    <div class="create-acc__word"><h4>Create account</h4></div>

                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">First Name</label>
                        <input type="text" value ="@ViewBag.fn" name="First_name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Last Name</label>
                        <input type="text" value ="@ViewBag.ln"name="Last_Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">image</label>
                        <input type="text" value ="@ViewBag.img"name ="profile_picture" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email</label>
                        <input type="email" value ="@ViewBag.email" name ="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <input type="password" value ="@ViewBag.pass" name ="password" class="form-control" id="exampleInputPassword1">
                        <div id="emailHelp" class="form-text">Passwords must be at least 8 characters.</div>
                    </div>
                    <!--
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Re-enter Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1">
    </div> -->
                    <button type="submit" class="btn btn-primary" style="width:100%;">Create your IMDB account</button>
                </form>
            </div>
        </div>
    </main>
    <footer>
        <div class="container-fluid footer">
            <div class="col-md-12 footer__logo"><img src="../content/assests/imgs/logo1.png" alt="" srcset=""></div>
            <div class="col-md-12 footer__word">Lorem ipsum dolor sit amet consectetur adipisicing elit. Laboriosam facere commodi adipisci est sint sequi itaque quas a possimus doloribus!</div>
